@page "{restaurantId:int}"
@model ToFood.Pages_Restaurants.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h1>Detail @Model.Restaurant.Name</h1>

<ul class="list-group">
    <li class="list-group-item">Id: @Model.Restaurant.Id</li>
    <li class="list-group-item">Name: @Model.Restaurant.Name</li>
    <li class="list-group-item">Location: @Model.Restaurant.Location</li>
    <li class="list-group-item">Cuisine: @Model.Restaurant.Cuisine</li>
</ul>

@if(Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<a class="mt-4 btn btn-primary" asp-page="./List">All Restaurants</a>